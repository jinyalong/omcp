  "vendor": "mario-andreschak（https://github.com/mario-andreschak）",
  "license": "未明确提及",
  "runtime": "node",
  "environmentVariables": {
    "SAP_URL": {
      "description": "SAP 系统的 URL 地址",
      "required": true
    },
    "SAP_USER": {
      "description": "SAP 用户名",
      "required": true
    },
    "SAP_PASSWORD": {
      "description": "SAP 用户密码",
      "required": true
    },
    "SAP_CLIENT": {
